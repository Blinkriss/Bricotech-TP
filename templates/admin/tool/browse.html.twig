{% extends 'admin/base.html.twig' %}

{% block title %}La Bric O'tech - Liste des outils{% endblock %}

{% block body %}

<h2>Outils</h2>
            <a href="{{ path('admin_tool_add') }}" class="bouton">Ajouter un outil</a>
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Propriétaire</th>
                    <th scope="col" class="col-1">Action</th>
                  </tr>
                </thead>
                <tbody>
                {% for tool in tool %}
                 <tr>
                    <th scope="row">{{ tool.id }}</th>
                    <td>{{ tool.name }}</td>
                    <td>{{ tool.toolCategory }}</td>
                    <td>{{ tool.user }}</td>
                    <td>
                        <a href="{{ path('admin_tool_edit', {'id': tool.id}) }}" class="edit" alt="éditer" title="Éditer">
                            <span class="iconify" data-icon="akar-icons:edit" data-inline="false"></span>
                        </a>

                        <form action="{{ path('admin_tool_delete', {'id': tool.id}) }}" method="post" class="d-inline">
                            <input type="hidden" name="_method" value="delete">
                            <button class="delete"><span class="iconify" data-icon="typcn:delete-outline" data-inline="false"></span></button>
                        </form>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>


{% endblock %}
