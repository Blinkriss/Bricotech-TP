{% extends 'admin/base.html.twig' %}

{% block title %}La Bric O'tech - Ajouter un utilisateur{% endblock %}

{% block body %}

<h1>Ajouter un utilisateur</h1>

{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.address) }}
    {{ form_row(form.city) }}
    {{ form_row(form.postalCode) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.talents) }}
    Choisissez un avatar
    <div class='check-avatars'>
        {% for avatar in form.avatar %}
            <div class="image-field">
                <img src="{{ asset('assets/images/avatars/'~avatar.vars.label) }}" style="width:80px;" alt="">
                {{ form_row(avatar) }}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="bouton">Ajouter</button>
{{ form_end(form) }}

{% endblock %}
