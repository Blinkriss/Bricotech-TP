{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Modifier une bricosphère{% endblock %}

{% block body %}

<h1>Modifier une bricosphère</h1>

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.creator) }}
    
    Choisissez une photo pour la Bric O'sphère
    <div class='check-avatars'>
        {% for imageBricosphere in form.imageBricosphere %}
            <div class="image-field">
                <img src="{{ asset('assets/images/bricospheres/'~imageBricosphere.vars.label) }}" style="width:150px;" alt="">
                {{ form_row(imageBricosphere) }}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="bouton">Modifier</button>
{{ form_end(form) }}

{% endblock %}
