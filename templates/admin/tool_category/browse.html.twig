{% extends 'admin/base.html.twig' %}

{% block title %}Liste des catégories d'outils{% endblock %}

{% block body %}

<h2>Catégories d'outils</h2>
  <a href="{{ path('admin_tool_category_add') }}" class="bouton">Ajouter une catégorie d'outil</a>

  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nom</th>
          <th scope="col" class="col-1">Action</th>
        </tr>
      </thead>
      <tbody>
      {% for toolCategory in toolCategory %}
        <tr>
          <th scope="row">{{ toolCategory.id }}</th>
          <td>{{ toolCategory.name }}</td>
          <td>
            <form action="{{ path('admin_tool_category_delete', {'id': toolCategory.id}) }}" method="post" class="d-inline">
              <input type="hidden" name="_method" value="delete">
              <button class="delete"><span class="iconify" data-icon="typcn:delete-outline" data-inline="false"></span></button>
            </form>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>


{% endblock %}
