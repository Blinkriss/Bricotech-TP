{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Blog Catégories{% endblock %}

{% block body %}

<h2>Catégories du blog</h2>
<a href="{{ path('admin_blog_category_add') }}" class="bouton" >Ajouter une catégorie</a> <br>


<table class="table table-striped table-hover">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Nom</th>
    <th scope="col" class="col-1">Action</th>
    </tr>
</thead>
<tbody>
{% for blogcategory in blogcategories %}
    <tr>
    <th scope="row">{{ blogcategory.id }}</th>
    <td>{{ blogcategory.name }}</td>
    <td>
        <form action="{{ path('admin_blog_category_delete', {'id': blogcategory.id}) }}" method="post" class="d-inline">
            <input type="hidden" name="_method" value="DELETE">
            <button class="delete"><span class="iconify" data-icon="typcn:delete-outline" data-inline="false"></span></button>
        </form>
    </td>
    </tr>
{% endfor %}
</tbody>
</table>

{% endblock %}
