{% extends 'admin/base.html.twig' %}

{% block title %}La Bric O'tech-FAQ{% endblock %}

{% block body %}

<h2>Foire aux questions</h2>
<a href="{{ path('admin_faq_add') }}" class="bouton">Ajouter une question</a>
<table class="table table-striped table-hover">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Question</th>
    <th scope="col" class="col-1">Action</th>
    </tr>
</thead>
<tbody>
    {% for faq in faq %}
        <tr>
        <th scope="row">{{ faq.id }}</th>
        <td>{{ faq.question }}</td>
        <td>
            <a href="{{ path('admin_faq_edit', {'id': faq.id}) }}" class="edit" alt="éditer" title="Éditer">
                <span class="iconify" data-icon="akar-icons:edit" data-inline="false"></span>
            </a>

            <form action="{{ path('admin_faq_delete', {'id': faq.id}) }}" method="post" class="d-inline">
                <input type="hidden" name="_method" value="delete">
                <button class="delete"><span class="iconify" data-icon="typcn:delete-outline" data-inline="false"></span></button>
            </form>
        </td>
        </tr>
    {% endfor %}
</tbody>
</table>


{% endblock %}
