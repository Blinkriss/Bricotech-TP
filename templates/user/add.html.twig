<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}La Bric O'tech{% endblock %}</title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bricothèque</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('assets/css/responsive.css') }}" rel="stylesheet" type="text/css">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('assets/images/favicon-96x96.png') }}">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300&display=swap" rel="stylesheet">
        <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
        <script type="text/javascript" src="{{ asset('assets/js/animations.js') }}"></script>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
<body>

    <div class="box-login col-md-6 offset-md-3">
            <header class="login">
                <img src="{{ asset('assets/images/charte/picto-logo.png') }}" alt="La Bric O'tech">
                <h1>Bienvenue sur <b>La Bric O'tech</b></h1>  
            </header>
            <main>

                {% block body %}
                    <section class="row ">
                        <h3>Je m'inscris</h3>
                        *Champs obligatoires
                        {{ form_start(form) }}
                        
                        <section class="signup__step signup__step--active" id="wizard-step1" data-step="1">
                            <fieldset class="signup__part">
                                {{ form_row(form.email) }}
                                {{ form_row(form.password) }}
                                <div class="form-group">
                                    <button type="button" class="bouton form-group__validate form-group__validate--step">&Eacute;tape
                                        suivante &gt;</button>
                                </div>
                            </fieldset>
                        </section>

                        <section class="signup__step" id="wizard-step2" data-step="2">
                            <fieldset class="signup__part">
                                {{ form_row(form.firstname) }}
                                {{ form_row(form.lastname) }}
                                <div class="form-group">
                                    <button type="button" class="bouton form-group__validate form-group__validate--step">&Eacute;tape
                                        suivante &gt;</button>
                                </div>
                            </fieldset>
                        </section>
                        
                        <section class="signup__step" id="wizard-step3" data-step="3">
                            <fieldset class="signup__part">
                                {{ form_row(form.address) }}
                                {{ form_row(form.postalCode) }}
                                {{ form_row(form.city) }}
                                {{ form_row(form.phone) }}
                                <div class="form-group">
                                    <button type="button" class="bouton form-group__validate form-group__validate--step">&Eacute;tape
                                        suivante &gt;</button>
                                </div>
                            </fieldset>
                        </section>

                        <section class="signup__step" id="wizard-step4" data-step="4">
                            <fieldset class="signup__part">
                                {{ form_row(form.talents) }}

                                Choisissez un avatar

                                <div class='check-avatars'>
                                    {% for avatar in form.avatar %}
                                        <div class="image-field">
                                            <img src="{{ asset('assets/images/avatars/'~avatar.vars.label) }}" style="width:80px;" alt="">
                                            {{ form_row(avatar) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <button type="submit" class="bouton">M'inscrire</button>
                            </fieldset>
                        </section>
                            
                        {{ form_end(form) }}
                        
                    </section>
                {% endblock %}
        </main>
        <footer>
            <div id="copyright">
                <p>{{ 'now' | date("Y") }} Copyright  © La Bric O’tech</p>
            </div>
        </footer>
        
    </div>

        <script src="{{ asset('assets/js/app.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>
