{% extends 'base.html.twig' %}

{% block title %}La Bric O'tech - Messagerie{% endblock %}

{% block body %}
<div class="main-title">
    <h1>Messagerie</h1>
</div>

<section class="row col-10 m-auto">
	<div class="content-details col">
		<a class="retour" href="{{ path('user_read') }}"><span class="iconify" data-icon="dashicons:arrow-left" data-inline="false"></span> Retourner sur mon Bric O'space</a>

		<div class="row border-top border-bottom py-3 mb-5 d-flex">
			<a href="{{ path("messages_received") }}" class="bouton">Boîte de réception</a>
			<a href="{{ path("messages_sent") }}" class="bouton ms-5">Eléments envoyés</a>
		</div>

		<div class="card">
			<h5 class="card-header">{{ message.title }}</h5>
			<div class="card-body">
				<p class="fw-bold border-bottom pb-2" >Expéditeur : {{ message.sender.firstname }} {{ message.sender.lastname }} <span class="fw-light fst-italic" >| Envoyé le : {{ message.createdAt|date('d/m/Y') }}</span></p>
				<p class="card-text">{{ message.message|raw }}</p>
			</div>
		</div>
		{% if message.sender.id != app.user.id %}
			<a href="{{ path('messages_send', {'id': message.sender.id}) }}" class="bouton mt-4">Répondre</a>
		{% endif %}

	</div>
</section>
{% endblock %}